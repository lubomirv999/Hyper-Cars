@model CarFormModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Remove your car</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input readonly asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input readonly asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BodyType"></label>
                <select disabled asp-for="BodyType" asp-items="@Html.GetEnumSelectList<BodyType>()"></select>
                <span asp-validation-for="BodyType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeOfTransmission"></label>
                <select disabled asp-for="TypeOfTransmission" asp-items="@Html.GetEnumSelectList<TypeOfTransmission>()"></select>
                <span asp-validation-for="TypeOfTransmission" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance"></label>
                <input readonly asp-for="TravelledDistance" class="form-control" />
                <span asp-validation-for="TravelledDistance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductionYear"></label>
                <input readonly asp-for="ProductionYear" class="form-control" />
                <span asp-validation-for="ProductionYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HorsePower"></label>
                <input readonly asp-for="HorsePower" class="form-control" />
                <span asp-validation-for="HorsePower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color"></label>
                <input readonly asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input readonly asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-danger">Remove</button>
        </form>
    </div>
</div>